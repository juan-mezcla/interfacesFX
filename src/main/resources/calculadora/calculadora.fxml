<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculadora.controlerCalculadora">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="25.0">
         <children>
            <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="200.0" prefHeight="0.0" prefWidth="600.0" prefWrapLength="100.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Operador 1" underline="true" />
                        <Spinner fx:id="operador1" editable="true"/>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Label text="Operador 2" underline="true" />
                        <Spinner fx:id="operador2" editable="true" />
                     </children>
                  </VBox>
               </children>
            </FlowPane>
            <Label fx:id="resultado" text="Resultado:" />
            <GridPane alignment="CENTER" hgap="5.0" maxWidth="500.0" minHeight="0.0" minWidth="0.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="resto" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#operacion" text="\%" GridPane.rowIndex="2" />
                  <Button fx:id="multi" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#operacion" text="x" GridPane.rowIndex="1" />
                  <Button fx:id="suma" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#operacion" text="+" />
                  <Button fx:id="resta" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#operacion" text="-" GridPane.columnIndex="1" />
                  <Button fx:id="dividir" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#operacion" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="reset" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onMouseClicked="#borrar" text="Reset" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
